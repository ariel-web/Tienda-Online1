.box 
    display:block
    background-color: #ffffff
    border-radius: 12px
    border: 1px solid #d6d6d6
    display: block
    margin 70px auto
    box-shadow: 2px 
    width: 360px

    .btn-success 
        width: 100%
        border: solid 0px
        border-color: color1
        background-color: color1
        &:focus
        &:active
            outline: none
            box-shadow: none
    .btn-success:hover
        background-color: color4

    .btn-success:focus
        background-color: color1

    .form-control
        &:focus
        &:active
            outline: none
            box-shadow: none
    .inside
        padding 25px

    .header
        background-color: color4
        width 100%
        border-radius: 12px 12px 0px 0px
        .logo 
            display: block
            margin 0px auto
            width: 70%
            height: 50%
            padding-top: 10px
            padding-bottom: 10px  

